const authorName = prompt("A yazarının ID'sini giriniz:"); // Kullanıcıdan ID al
        if (!authorName) {
            alert("Lütfen bir yazar Name'si girin.");
            return;
        }
    
        fetch('http://127.0.0.1:5000/wanted_2', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ author_name: authorName }) // Flask'a gönderilecek veri
        })
        .then(response => {
            if (!response.ok) {
                // Hata durumunda hata mesajını JSON'dan al ve göster
                return response.json().then(err => { throw new Error(err.error); });
            }
            return response.json();
        })
        .then(data => {
            // Gelen cevaptaki priority_queue'u alert olarak göster
            alert(`Priority Queue:\n${data.priority_queue}`);
        })
        .catch(error => {
            // Hata mesajını alert olarak göster
            alert(`Error: ${error.message}`);
        });